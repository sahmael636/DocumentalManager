<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DocumentalManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DocumentalManager.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Inicio"
                  Route="MainPage"
                  ContentTemplate="{DataTemplate views:MainPage}" />

    <ShellContent Title="Tablas"
                  Route="TablasPage"
                  ContentTemplate="{DataTemplate views:TablasPage}" />

    <ShellContent Title="Consulta"
                  Route="ConsultaPage"
                  ContentTemplate="{DataTemplate views:ConsultaPage}" />

</Shell>
