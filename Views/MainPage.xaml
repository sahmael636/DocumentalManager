<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocumentalManager.Views.MainPage"
             xmlns:viewmodels="clr-namespace:DocumentalManager.ViewModels"
             x:DataType="viewmodels:MainViewModel"
             Title="{Binding Title}">

    <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Center">

        <Border StrokeThickness="2"
                Stroke="#2b0b98"
                Padding="20"
                HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="30">
                <Label Text="Gestor Documental"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#2b0b98"/>

                <Label Text="Tablas de Retención Documental"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="#666666"/>
            </VerticalStackLayout>
        </Border>

        <VerticalStackLayout Spacing="15" Margin="0,30,0,0">
            <Button Text="TABLAS"
                    Command="{Binding GoToTablasCommand}"
                    BackgroundColor="#2b0b98"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="60"
                    CornerRadius="10"/>

            <Button Text="CONSULTA"
                    Command="{Binding GoToConsultaCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="60"
                    CornerRadius="10"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>