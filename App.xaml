<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DocumentalManager"
             xmlns:converters="clr-namespace:DocumentalManager.Converters"
             x:Class="DocumentalManager.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:EqualConverter x:Key="EqualConverter"/>
            <converters:NotEqualConverter x:Key="NotEqualConverter"/>
            <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter"/>
            <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>

            <Color x:Key="Primary">#2b0b98</Color>
            <Color x:Key="Secondary">#4CAF50</Color>
            <Color x:Key="Danger">#F44336</Color>
            <Color x:Key="Warning">#FF9800</Color>
            <Color x:Key="Info">#2196F3</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
